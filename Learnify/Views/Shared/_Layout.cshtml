    <script type="text/javascript">
        $(document).on("click", ".logout", function(){
            $("#logOutModal").modal("show");
        });
        $(document).on("click", ".closeLogOutModal", function(){
            $("#logOutModal").modal("hide");
        });
        $(document).on("click", ".logoutModalButton", function(){
            $("#logOutModal").modal("hide");
        });
        $(document).ready(function(){
            let loginStatus = "@ViewBag.Message";
            let isaAdmin = "@ViewBag.isAdmin";
            if(loginStatus == "1" ){
                $(".btn-getstarted").hide();
                $(".logout").show();
            }
            else{
                $(".btn-getstarted").show();
                $(".logout").hide();
            }
            if(isaAdmin.toLowerCase() == "true"){
                $(".btn-admin").show();
            }else{
                $(".btn-admin").hide();
            }
        });
    </script>
