<!-- Responsive Filter Script -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Isotope initialization
        const iso = new Isotope('.isotope-container', {
            itemSelector: '.isotope-item',
            layoutMode: 'masonry'
        });

        // Filter buttons functionality
        document.querySelectorAll('.isotope-filters li').forEach(filterBtn => {
            filterBtn.addEventListener('click', function() {
                document.querySelector('.filter-active').classList.remove('filter-active');
                this.classList.add('filter-active');
                iso.arrange({ filter: this.getAttribute('data-filter') });
            });
        });

        // Responsive filter adjustment
        function adjustFilters() {
            const filtersContainer = document.querySelector('.isotope-filters');
            if (window.innerWidth < 768) {
                filtersContainer.classList.add('flex-column');
            } else {
                filtersContainer.classList.remove('flex-column');
            }
        }

        window.addEventListener('resize', adjustFilters);
        adjustFilters();
    });
</script>